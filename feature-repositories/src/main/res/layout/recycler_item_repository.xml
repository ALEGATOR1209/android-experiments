<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="20dp"
    android:paddingHorizontal="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/lockIcon"
        android:src="@drawable/ic_lock"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/title"
        tools:text="Repository title"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/lockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="0dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        tools:text="Lorem ipsum dolor sit amet"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintEnd_toStartOf="@id/moreBtn"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/starsIcon"
        android:src="@drawable/ic_star"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:layout_marginTop="4dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/starsCount"
        tools:text="123"
        app:layout_constraintTop_toTopOf="@id/starsIcon"
        app:layout_constraintBottom_toBottomOf="@id/starsIcon"
        app:layout_constraintStart_toEndOf="@id/starsIcon"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/forksIcon"
        android:src="@drawable/ic_fork"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/starsCount"
        app:layout_constraintTop_toBottomOf="@id/desc"
        android:layout_marginTop="4dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/forkCount"
        tools:text="456"
        app:layout_constraintTop_toTopOf="@id/forksIcon"
        app:layout_constraintBottom_toBottomOf="@id/forksIcon"
        app:layout_constraintStart_toEndOf="@id/forksIcon"
        android:layout_marginStart="4dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/moreBtn"
        android:src="@drawable/ic_arrow_right"
        app:tint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
    <View
        android:background="@color/grey"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/starsIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
