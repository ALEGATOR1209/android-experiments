<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingTop="8dp">
        <TextView
            android:id="@+id/title"
            tools:text="Repository Name"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_topics"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:listitem="@layout/recycler_item_repository_topic"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/lockIcon"
            android:src="@drawable/ic_lock"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_topics"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/privateLabel"
            android:text="@string/public_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_topics"
            app:layout_constraintStart_toEndOf="@id/lockIcon"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:id="@+id/starsIcon"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/privateLabel"
            app:layout_constraintBottom_toBottomOf="@id/privateLabel"
            app:layout_constraintStart_toEndOf="@id/privateLabel"
            android:layout_marginStart="16dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/starsCount"
            tools:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/starsIcon"
            app:layout_constraintBottom_toBottomOf="@id/starsIcon"
            app:layout_constraintStart_toEndOf="@id/starsIcon"
            android:layout_marginStart="8dp"/>
        <ImageView
            android:id="@+id/forksIcon"
            android:src="@drawable/ic_fork"
            app:layout_constraintTop_toTopOf="@id/starsIcon"
            app:layout_constraintBottom_toBottomOf="@id/starsIcon"
            app:layout_constraintStart_toEndOf="@id/starsCount"
            android:layout_marginStart="16dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/black" />
        <TextView
            android:id="@+id/forkCount"
            tools:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/forksIcon"
            app:layout_constraintBottom_toBottomOf="@id/forksIcon"
            app:layout_constraintStart_toEndOf="@id/forksIcon"
            android:layout_marginStart="8dp"/>
        <TextView
            android:id="@+id/desc"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/privateLabel"
            android:textSize="18sp"
            android:textColor="@color/grey"
            tools:text="Repository Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/branchesButton"
            android:text="@string/branches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:drawableTint="@color/black"
            app:layout_constraintTop_toBottomOf="@id/desc"/>

        <TextView
            android:id="@+id/contributors_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/contributors"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/branchesButton"
            android:gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_contributors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/contributors_title"
            tools:listitem="@layout/recycler_item_contributor" />

        <TextView
            android:id="@+id/languages_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="@string/languages"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/recycler_contributors"
            android:gravity="center"/>
        <ua.alegator1209.feature_repositories.ui.views.LanguageBarView
            android:id="@+id/languagesBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:barHeight="10dp"
            app:stats="true"
            app:statsCircleRadius="5dp"
            app:statsPadding="8dp"
            app:statsEntryPadding="4dp"
            app:statsTextAppearance="@style/LanguageBarViewTextAppearance"
            tools:defaultLanguages="true"
            app:layout_constraintTop_toBottomOf="@id/languages_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
