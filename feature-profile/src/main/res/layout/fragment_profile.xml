<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/user_pic_placeholder"
        android:contentDescription="@string/profile_pic_desc" />
    <View
        android:id="@+id/header_fallback"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/email"
        android:background="@color/black_opacity_60"/>
    <TextView
        android:id="@+id/username"
        tools:text="Name"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/profilePic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/email"
        tools:text="user@example.com"
        android:textColor="@color/grey"
        android:paddingBottom="8dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/companyTxt"
        android:text="@string/company_label"
        android:textSize="18sp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/header_fallback"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/company"
        tools:text="Company"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/companyTxt"
        app:layout_constraintBottom_toBottomOf="@id/companyTxt"
        app:layout_constraintStart_toEndOf="@id/companyTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blogTxt"
        android:text="@string/blog_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/companyTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/blog"
        tools:text="Blog"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/blogTxt"
        app:layout_constraintBottom_toBottomOf="@id/blogTxt"
        app:layout_constraintStart_toEndOf="@id/blogTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/locationTxt"
        android:text="@string/location_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/blogTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location"
        tools:text="Location"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/locationTxt"
        app:layout_constraintBottom_toBottomOf="@id/locationTxt"
        app:layout_constraintStart_toEndOf="@id/locationTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/publicReposTxt"
        android:text="@string/public_repositories_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/locationTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/publicRepos"
        tools:text="10"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/publicReposTxt"
        app:layout_constraintBottom_toBottomOf="@id/publicReposTxt"
        app:layout_constraintStart_toEndOf="@id/publicReposTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/publicGistsTxt"
        android:text="@string/public_gists_label"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/publicReposTxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/publicGists"
        tools:text="20"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="@id/publicGistsTxt"
        app:layout_constraintBottom_toBottomOf="@id/publicGistsTxt"
        app:layout_constraintStart_toEndOf="@id/publicGistsTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/logoutBtn"
        android:text="@string/logout"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
